@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />
    
    @Scripts.Render("~/Content/js")
    @Styles.Render("~/Content/css")

    @RenderSection("_scripts", required: false)
</head>
<body>

    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <div class="site-logo">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-truck"></i></a> SiteName
                </div>
            </div>
            <div class="col-md-5">
                <i class="fa fa-mobile fa-4x pull-left"></i>
                <div><strong>+7 962 917 5279</strong></div>
                <div><strong>+7 915 123 4567</strong></div>
            </div>
            <div class="col-md-3">
                <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("Checkout", "Cart")">
                    <i class="fa fa-magic"></i> Оформить заказ
                </a>
                <div class="x-cart help-block" data-url-cart-summary="@Url.Action("GetCartSummary", "Cart")">
                    <i class="fa fa-refresh fa-spin"></i> Загрузка корзины
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @Html.Action("MenuItems", "Common")
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.Action("CatalogSections", "Common")
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        
        <hr/>

        <div class="row">
            <div class="col-md-4">
                &copy; @DateTime.Today.Year All Rights Reserved
            </div>
            <div class="col-md-8">
                <div><i class="fa fa-phone-square"></i> +7 915 123 4567</div>
                <div><i class="fa fa-envelope"></i> <a href="mailto:mail@WebMail.ru">mail@WebMail.ru</a></div>
            </div>
        </div>

    </div>
    
    <script type="text/template" class="x-tp-cart-summary">
        В корзине <strong><%= TotalAmount %></strong> товаров на <strong><%= TotalCost %></strong> <i class="fa fa-rub"></i>
    </script>
</body>
</html>