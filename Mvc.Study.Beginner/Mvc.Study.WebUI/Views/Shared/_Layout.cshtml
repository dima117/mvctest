@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />
    
    @Scripts.Render("~/Content/js")
    @Styles.Render("~/Content/css")
    
    @RenderSection("_scripts", required: false)
</head>
<body>

    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Home")" class="x-logo">
                    <img src="~/Content/images/logo.png" title="Main page" />
                </a>
            </div>
            <div class="col-md-4">
                <h4>Контакты</h4>
                email: <a href="mailto:shartshop@nowhere.com">shartshop@nowhere.com</a>
            </div>
            <div class="col-md-4">
                <h4>Корзина</h4>
                <div class="x-cart" data-url-cart-summary="@Url.Action("GetCartSummary", "Cart")" data-url-cart-add="@Url.Action("AddProduct", "Cart")">
                    Идет загрузка
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Action("MenuItems", "Common")
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.Action("CatalogSections", "Common")
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>Footer</h1>
            </div>
        </div>

    </div>
    
    <script type="text/template" class="x-tp-cart-summary">
        Товаров <b><%= TotalAmount %></b> на сумму <b><%= TotalPrice %></b>&#8381;
    </script>
</body>
</html>