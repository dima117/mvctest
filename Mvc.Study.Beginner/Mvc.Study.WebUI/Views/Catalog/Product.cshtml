@model Mvc.Study.Beginner.Models.ProductModel

@{		
    ViewBag.Title = Model.Name;		
    Layout = "~/Views/Shared/_Layout.cshtml";		
}		

<h1>@Model.Name</h1>
<p>
	@Model.Price.ToString("N2") <i class="fa fa-rub"></i>
</p>
<p>
    <a href="#" class="btn btn-primary btn-lg x-product" data-url-cart-add="@Url.Action("AddProduct", "Cart", new {productId = Model.Id})">
        <i class="fa fa-cart-plus"></i>Add to cart
    </a>
</p>
<p>
	@Model.Description
</p>

@Html.Raw(Model.FullDescription)