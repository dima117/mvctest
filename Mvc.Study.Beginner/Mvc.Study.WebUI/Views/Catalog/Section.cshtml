@model Mvc.Study.Beginner.Models.CatalogSectionModel
@{
	ViewBag.Title = Model.MenuTitle;
	Layout = "/Views/Shared/_Layout.cshtml";
}

@Html.Raw(Model.ContentPrimary)

@Html.Raw(Model.ContentSecondary)

@foreach (var product in Model.Products)
{
    @Html.Partial("ProductListItem", product)
}

@section _scripts {
<script type="text/javascript">
	$(function () {

		$('.x-catalog li[data-pageid="@Model.Id"]').addClass('active');
	});
</script>
}